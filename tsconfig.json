{
  "include": ["src/**/*.ts", "src/**/*.js"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "outDir": "build/",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src"
  },
  "exclude": ["node_modules"]
}
