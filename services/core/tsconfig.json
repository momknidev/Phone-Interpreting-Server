{
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "drizzle.config.ts"
  ],
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "build/",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
  }
}
